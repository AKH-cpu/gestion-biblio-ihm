<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
      prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: #549CBA;"
              HBox.hgrow="ALWAYS">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" onMouseClicked="#go" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../img/bib.png"/>
                    </image>
                </ImageView>
                <Label text="Library System Management" textFill="#fffdfd">
                    <font>
                        <Font size="26.0"/>
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </Label>
            </children>
        </VBox>
        <VBox prefHeight="515.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #FFF;"
              HBox.hgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #fff;">
                    <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/comp-2.gif"/>
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <HBox prefHeight="23.0" prefWidth="400.0">
                    <children>
                        <Label text="USERNAME :" textFill="#549cb8" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Calibri Bold" size="20.0"/>
                            </font>
                            <padding>
                                <Insets left="15.0"/>
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="110.0" prefWidth="400.0" spacing="5.0">
                    <children>
                        <TextField fx:id="usernameField" prefHeight="0.0" prefWidth="370.0" promptText="username"
                                   styleClass="field" stylesheets="@../css/login.css">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                </HBox>
                <HBox prefHeight="0.0" prefWidth="400.0">
                    <children>
                        <Label text="PASSWORD :" textFill="#549cba" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Calibri Bold" size="20.0"/>
                            </font>
                            <padding>
                                <Insets left="15.0"/>
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="96.0" prefWidth="400.0" spacing="5.0">
                    <children>
                        <PasswordField fx:id="passwordField" prefHeight="0.0" prefWidth="370.0" promptText="password"
                                       styleClass="field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <stylesheets>
                                <URL value="@../css/login.css"/>
                                <URL value="@../css/login.css"/>
                            </stylesheets>
                        </PasswordField>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="0.0" prefWidth="400.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onLogin" prefHeight="44.0" prefWidth="92.0"
                                styleClass="btn-login" stylesheets="@../css/login.css" text="Login"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Copyright Â© 2020 all rights reserved"
                               textAlignment="CENTER" textFill="#34748d">
                            <font>
                                <Font name="System Bold Italic" size="16.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
